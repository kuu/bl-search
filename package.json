{
  "name": "bl-search",
  "version": "0.0.1",
  "description": "",
  "author": "Kuu Miyazaki",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "body-parser": "^1.15.0",
    "config": "^1.20.1",
    "express": "^4.13.4"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "eslint": "^2.8.0",
    "stylus": "^0.54.2"
  },
  "scripts": {
    "clean": "rm -fR dist ; mkdir dist",
    "lint": "eslint app/*.js",
    "build": "npm run lint && npm run buildScripts && npm run buildStyles && npm run copyStaticFiles",
    "buildScripts": "browserify app/scripts/client/index.js --debug > dist/bundle.js",
    "buildStyles": "stylus app/styles/*.styl -o dist",
    "copyStaticFiles": "cp app/*.html dist/",
    "prestart": "npm run clean && npm run build",
    "start": "node app/scripts/server/index.js"
  }
}
